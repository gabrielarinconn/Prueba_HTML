css


/* Dentro de tu @media (max-width: 1024px) */
.nav {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 100%; /* Se despliega justo debajo del header */
  left: 0;
  width: 100%;
  background-color: white;
  overflow: hidden; /* Oculta el contenido */
  max-height: 0;    /* Altura inicial cero */
  transition: max-height 0.4s ease-in-out; /* Animación suave */
  box-shadow: 0 5px 10px rgba(0,0,0,0.1);
}

/* Esta es la clase que activa el JavaScript */
.nav.active {
  max-height: 450px; /* Altura suficiente para mostrar los links */
}




js

const btnMenu = document.getElementById('mobile-menu');
const menu = document.getElementById('nav-menu');

btnMenu.addEventListener('click', () => {
  menu.classList.toggle('active'); // "Prende" y "apaga" el menú
});
